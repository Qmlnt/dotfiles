        "format-connected": "Û∞Ç± {device_alias}"
    },

    "network": {
        "interval": 6,
        "tooltip": false,
        "max-length": 30,
        "interface": "wlan0",
        "family": "ipv4",
        "format": "{ifname}",
        "format-wifi": "{icon} {essid}",
        "format-alt": "{icon} ({signalStrength}%) {essid} {frequency}MHz",
        "format-ethernet": "Û∞àÄ {ipaddr}",
