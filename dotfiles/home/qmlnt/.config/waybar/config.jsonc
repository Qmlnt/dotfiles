{
    "name": "main",
    "layer": "top",
    "position": "bottom",
    //"output": ["eDP-1"],
    "height": 24,
    //"width": 1280,
    "modules-left": ["hyprland/workspaces", "hyprland/submap"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["tray", "bluetooth", "network", "cpu", "memory", "disk", "custom/microphone", "wireplumber", "backlight", "hyprland/language", "custom/plugged", "battery", "custom/clock"],
    "fixed-center": false,
